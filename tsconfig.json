{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@auth/*": ["src/auth/*"],
      "@batch/*": ["src/batch/*"],
      "@config/*": ["src/config/*"],
      "@common/*": ["src/common/*"],
      "@jobs/*": ["src/jobs/*"],
      "@providers/*": ["src/providers/*"],
      "@templates/*": ["src/templates/*"],
      "@admin/*": ["src/modules/admin/*"],
      "@mcommon/*": ["src/modules/common/*"],
      "@item/*": ["src/modules/item/*"],
      "@my/*": ["src/modules/my/*"],
      "@order/*": ["src/modules/order/*"],
      "@payment/*": ["src/modules/payment/*"],
      "@user/*": ["src/modules/user/*"],
      "@src/*": ["src/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
